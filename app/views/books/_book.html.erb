<div class="card">
  <%= link_to image_tag(book.image, class: :card__img ), book_path(book) %>
  <div class="card__body">
    <%= link_to book.title, book_path(book), class: :card__title%>
    <p class="card__summary">
      <%= book.author %>
    </p>
    <%= link_to "by #{book.user.name}", root_path, class: :card__user %>
  </div>
</div>
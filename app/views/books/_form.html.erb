<%= form_with(model: @book, local: true) do |f|%>
  <div class="field">
    <%= f.label :title, "本のタイトル" %><br />
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :author, "著者" %><br />
    <%= f.text_area :author %>
  </div>

  <div class="field">
    <%= f.label :memo, "感想" %><br />
    <%= f.text_area :memo, class: :form__text %>
  </div>

  <div class="field">
    <%= f.label :image, "本の画像" %><br />
    <%= f.file_field :image %>
  </div>

  <div class="actions">
    <%= f.submit "本棚に登録する", class: :form__btn  %>
  </div>
<% end %>